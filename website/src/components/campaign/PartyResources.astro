---
interface Resource {
  href: string;
  icon: string;
  title: string;
  description: string;
  color: string;
}

interface QuickNav {
  href: string;
  icon: string;
  label: string;
}

const resources: Resource[] = [
  {
    href: "/journal",
    icon: "📖",
    title: "Session Journal",
    description: "Read past adventures",
    color: "text-green-300",
  },
  {
    href: "/timekeeping",
    icon: "🗓️",
    title: "Campaign Calendar",
    description: "Track important dates",
    color: "text-purple-300",
  },
  {
    href: "/atlas",
    icon: "🗺️",
    title: "World Atlas",
    description: "Explore locations",
    color: "text-blue-300",
  },
];

const quickNavItems: QuickNav[] = [
  { href: "/people", icon: "👥", label: "People" },
  { href: "/timekeeping", icon: "⏰", label: "Timeline" },
  { href: "/journal", icon: "📚", label: "Lore" },
  { href: "/atlas", icon: "🏛️", label: "Places" },
];
---

<div
  class="bg-gradient-to-r from-hero-red-dark to-accent-600 text-white rounded-lg p-6 md:p-8"
>
  <div class="text-center mb-6">
    <h2 class="text-2xl md:text-3xl font-bold mb-3">Party Resources</h2>
    <p class="text-gray-100">
      Quick access to everything your party needs for their adventure
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    {
      resources.map((resource) => (
        <a
          href={resource.href}
          class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-center hover:bg-white/20 transition-all duration-200 group"
        >
          <div
            class={`text-2xl font-bold ${resource.color} group-hover:scale-110 transition-transform`}
          >
            {resource.icon}
          </div>
          <div class="text-gray-100 text-sm font-medium">{resource.title}</div>
          <div class="text-gray-300 text-xs mt-1">{resource.description}</div>
        </a>
      ))
    }
  </div>

  <!-- Quick Navigation -->
  <div class="pt-6 border-t border-white/20">
    <h3 class="text-xl font-semibold mb-4 text-center">Quick Navigation</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
      {
        quickNavItems.map((item) => (
          <a
            href={item.href}
            class="flex items-center gap-2 bg-white/10 rounded-lg p-3 text-sm hover:bg-white/20 transition-all"
          >
            <span>{item.icon}</span>
            <span>{item.label}</span>
          </a>
        ))
      }
    </div>
  </div>
</div>
