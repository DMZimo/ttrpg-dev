---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "⚔️ Party Portal",
  description = "Adventure dashboard for the Dessarin Valley Chronicles",
} = Astro.props;
---

<div class="text-left relative">
  <!-- Background decorative element -->
  <div
    class="absolute -top-2 -left-2 w-16 h-16 bg-gradient-to-br from-accent-500/20 to-hero-red/20 rounded-full blur-xl"
  >
  </div>

  <div class="relative z-10">
    <h1
      class="text-3xl md:text-4xl font-bold text-text-primary mb-2 flex items-center gap-3"
    >
      <span class="text-4xl animate-pulse">⚔️</span>
      <span
        class="bg-gradient-to-r from-accent-500 to-hero-red bg-clip-text text-transparent"
      >
        Party Portal
      </span>
    </h1>
    <p class="text-base md:text-lg text-secondary leading-relaxed max-w-2xl">
      {description}
    </p>

    <!-- Decorative underline -->
    <div
      class="mt-3 w-24 h-1 bg-gradient-to-r from-accent-500 to-hero-red rounded-full"
    >
    </div>
  </div>
</div>
