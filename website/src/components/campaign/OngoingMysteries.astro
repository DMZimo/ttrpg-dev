---
import { getCollection } from 'astro:content';

// Get active mysteries from the new mysteries collection
const allMysteries = await getCollection('mysteries');
const mysteries = allMysteries.filter(mystery => mystery.data.status === 'active');

const getPriorityColor = (priority: string) => {
  switch (priority) {
    case "high":
      return "border-l-red-500";
    case "medium":
      return "border-l-yellow-500";
    case "low":
      return "border-l-green-500";
    default:
      return "border-l-gray-500";
  }
};

const getTagColor = (tag: string) => {
  const colors: Record<string, string> = {
    'family-history': 'bg-gray-100 dark:bg-gray-700/30 text-gray-800 dark:text-gray-200',
    'equipment': 'bg-orange-100 dark:bg-orange-900/30 text-orange-800 dark:text-orange-200',
    'weather': 'bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200',
    'supernatural': 'bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-200',
    'red-larch': 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200',
    'aldor': 'bg-indigo-100 dark:bg-indigo-900/30 text-indigo-800 dark:text-indigo-200',
    'imdarr': 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-200'
  };
  return colors[tag.toLowerCase()] || 'bg-gray-100 dark:bg-gray-700/30 text-gray-800 dark:text-gray-200';
};
---

<div class="mb-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl md:text-2xl font-bold text-text-primary flex items-center">
      üîç Ongoing Mysteries
    </h2>
    <div class="text-sm text-secondary">
      {mysteries.length} Unsolved
    </div>
  </div>

  <div class="space-y-4">
    {mysteries.length === 0 ? (
      <div class="text-center py-8 text-secondary">
        <p>No active mysteries found. Create mystery files in <code>src/content/campaign/mysteries/</code> to see them here.</p>
      </div>
    ) : (
      mysteries.map((mystery) => (
        <a
          href={`/campaign/mysteries/${mystery.id}`}
          class={`hero-card bg-surface-elevated rounded-xl shadow-card p-5 border-l-4 ${getPriorityColor(mystery.data.priority || 'medium')} hover:border-accent-400 hover:shadow-card-hover transition-all duration-300 group relative overflow-hidden block cursor-pointer`}
        >
          <!-- Mystery background pattern -->
          <div class="absolute inset-0 opacity-5 group-hover:opacity-10 transition-opacity duration-300">
            <div class="w-full h-full bg-gradient-to-br from-purple-500 via-transparent to-blue-500"></div>
          </div>
          
          <div class="relative z-10">
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-lg font-bold text-text-primary group-hover:text-accent-400 transition-colors duration-200 flex items-center gap-2">
                <span class="text-xl">üîç</span>
                {mystery.data.title}
              </h3>
              <div class="flex items-center gap-3 text-sm text-secondary">
                <div class="bg-surface-secondary px-3 py-1 rounded-full border">
                  <span class="font-semibold">{mystery.data.clues_found?.length || 0}</span>
                  <span class="text-muted"> clues found</span>
                </div>
              </div>
            </div>
            
            <p class="text-secondary text-sm mb-4 leading-relaxed">
              {mystery.data.description}
            </p>
            
            <div class="flex items-center justify-between mb-3">
              <div class="flex flex-wrap gap-2">
                {mystery.data.tags?.map((tag: string) => (
                  <span
                    class={`${getTagColor(tag)} text-xs font-semibold px-3 py-1 rounded-full border hover:scale-105 transition-transform duration-200`}
                  >
                    {tag.charAt(0).toUpperCase() + tag.slice(1).replace('-', ' ')}
                  </span>
                ))}
              </div>
              
              <!-- Enhanced clue progress bar -->
              <div class="flex items-center gap-2">
                <span class="text-xs text-muted">Clues Found:</span>
                <div class="text-xs font-semibold text-accent-400">
                  {mystery.data.clues_found?.length || 0}
                </div>
              </div>
            </div>
            
            {/* Show clues if any found */}
            {mystery.data.clues_found && mystery.data.clues_found.length > 0 && (
              <div class="text-xs text-tertiary pt-3 border-t border-primary/20">
                <div class="font-medium mb-1">Known Clues:</div>
                <ul class="space-y-1">
                  {mystery.data.clues_found.map((clue: any, index: number) => (
                    <li class="flex items-center gap-2">
                      <span class="text-accent-500">‚Ä¢</span>
                      <span>{typeof clue === 'string' ? clue : clue.clue}</span>
                      {typeof clue === 'object' && clue.significance && (
                        <span class={`text-xs px-2 py-1 rounded-full ${
                          clue.significance === 'breakthrough' ? 'bg-gold-100 text-gold-800' :
                          clue.significance === 'major' ? 'bg-orange-100 text-orange-800' :
                          'bg-gray-100 text-gray-800'
                        }`}>
                          {clue.significance}
                        </span>
                      )}
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </a>
      ))
    )}
  </div>
</div>
