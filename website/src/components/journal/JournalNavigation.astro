---
// Navigation breadcrumbs and view options
---

<nav
  class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 sticky top-16 z-40 backdrop-blur-sm bg-white/80 dark:bg-gray-800/80"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Breadcrumbs -->
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li>
            <a
              href="/"
              class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
              <span class="sr-only">Home</span>
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <svg
                class="w-5 h-5 text-gray-400"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="ml-2 text-gray-900 dark:text-gray-100 font-medium"
                >Game Sessions</span
              >
            </div>
          </li>
        </ol>
      </nav>

      <!-- View Options -->
      <div class="flex items-center space-x-4">
        <!-- Grid/List Toggle -->
        <div class="flex bg-gray-100 dark:bg-gray-700 rounded-lg p-1">
          <button
            id="grid-view"
            class="px-3 py-1 rounded-md text-sm font-medium transition-colors bg-white dark:bg-gray-600 text-gray-900 dark:text-gray-100 shadow-sm"
            aria-label="Grid view"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
              ></path>
            </svg>
          </button>
          <button
            id="list-view"
            class="px-3 py-1 rounded-md text-sm font-medium transition-colors text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100"
            aria-label="List view"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Export Options -->
        <div class="relative">
          <button
            id="export-menu-button"
            class="flex items-center px-3 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors"
          >
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            Export
          </button>

          <!-- Export dropdown (hidden by default) -->
          <div
            id="export-menu"
            class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg shadow-lg z-10"
          >
            <div class="py-1">
              <button
                class="w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors"
              >
                Download as PDF
              </button>
              <button
                class="w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors"
              >
                Export to JSON
              </button>
              <button
                class="w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors"
              >
                Create RSS Feed
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const gridViewBtn = document.getElementById(
      "grid-view"
    ) as HTMLButtonElement;
    const listViewBtn = document.getElementById(
      "list-view"
    ) as HTMLButtonElement;
    const exportMenuBtn = document.getElementById(
      "export-menu-button"
    ) as HTMLButtonElement;
    const exportMenu = document.getElementById("export-menu") as HTMLElement;
    const sessionGrid = document.getElementById("session-grid") as HTMLElement;

    // View toggle functionality
    function toggleView(viewType: "grid" | "list") {
      if (viewType === "grid") {
        sessionGrid.className =
          "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6";
        gridViewBtn.className =
          "px-3 py-1 rounded-md text-sm font-medium transition-colors bg-white dark:bg-gray-600 text-gray-900 dark:text-gray-100 shadow-sm";
        listViewBtn.className =
          "px-3 py-1 rounded-md text-sm font-medium transition-colors text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100";
      } else {
        sessionGrid.className = "space-y-4";
        listViewBtn.className =
          "px-3 py-1 rounded-md text-sm font-medium transition-colors bg-white dark:bg-gray-600 text-gray-900 dark:text-gray-100 shadow-sm";
        gridViewBtn.className =
          "px-3 py-1 rounded-md text-sm font-medium transition-colors text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100";

        // Update cards for list view
        const cards = sessionGrid.querySelectorAll("article");
        cards.forEach((card) => {
          card.className = card.className.replace(
            "md:col-span-2 lg:col-span-3",
            ""
          );
          card.classList.add("flex", "flex-row", "max-w-none");
        });
      }
    }

    // Export menu toggle
    function toggleExportMenu() {
      exportMenu.classList.toggle("hidden");
    }

    // Close export menu when clicking outside
    document.addEventListener("click", function (event) {
      if (
        !exportMenuBtn.contains(event.target as Node) &&
        !exportMenu.contains(event.target as Node)
      ) {
        exportMenu.classList.add("hidden");
      }
    });

    // Event listeners
    gridViewBtn.addEventListener("click", () => toggleView("grid"));
    listViewBtn.addEventListener("click", () => toggleView("list"));
    exportMenuBtn.addEventListener("click", toggleExportMenu);

    // Set default view
    toggleView("grid");
  });
</script>
