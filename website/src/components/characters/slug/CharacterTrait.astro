---
export interface Props {
  title: string;
  items: string[];
  color: string;
  colorVar: string;
}

const { title, items, color, colorVar } = Astro.props;
---

<div class="relative">
  <h3
    class={`uppercase ${color} tracking-wider inline-block text-xs font-bold relative pr-3 mb-2 border-b border-current`}
  >
    {title}
  </h3>
  <div
    class="bg-surface bg-opacity-60 border-l-2 pl-3 py-2 transition-all duration-200 ease-in-out hover:border-l-4 hover:bg-opacity-80"
    style={`--trait-color: rgb(${colorVar}); border-left-color: rgb(${colorVar});`}
  >
    {
      items.map((item: string) => (
        <p class="text-text-secondary text-sm">{item}</p>
      ))
    }
  </div>
</div>
