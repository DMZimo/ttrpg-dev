---
import BaseLayout from "../layouts/BaseLayout.astro";
import { calculateCampaignStats } from "../utils/campaignStats";
import { getCollection } from "astro:content";

// Get calculated stats from the centralized utility
const statsData = await calculateCampaignStats();

// Get journal entries for the session timeline
const journalEntries = await getCollection("journal");

// Destructure the stats for easier use
const {
  totalSessions,
  totalCharacters,
  totalNPCs,
  totalQuests,
  activePlayers,
  currentLevel,
  totalPlayTime,
  combatEncounters,
  deathSaves,
  criticalHits,
} = statsData;

// Mock additional stats for the detailed page
const completedQuests = 3;
const activeQuests = totalQuests - completedQuests;
---

<BaseLayout
  title="Campaign Statistics"
  description="Detailed statistics and tracking for your TTRPG campaign"
>
  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
        üìä Campaign Statistics
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Comprehensive tracking for your tabletop adventure
      </p>
    </div>

    <!-- Quick Stats Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 mb-8">
      <!-- Sessions -->
      <div
        class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-4 rounded-xl border border-gray-200/50 dark:border-gray-700/50"
      >
        <div class="text-center">
          <div class="text-2xl mb-2">üìù</div>
          <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">
            {totalSessions}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Sessions</div>
        </div>
      </div>

      <!-- Characters -->
      <div
        class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-4 rounded-xl border border-gray-200/50 dark:border-gray-700/50"
      >
        <div class="text-center">
          <div class="text-2xl mb-2">üë•</div>
          <div class="text-2xl font-bold text-purple-600 dark:text-purple-400">
            {totalCharacters}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Characters</div>
        </div>
      </div>

      <!-- NPCs -->
      <div
        class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-4 rounded-xl border border-gray-200/50 dark:border-gray-700/50"
      >
        <div class="text-center">
          <div class="text-2xl mb-2">üé≠</div>
          <div class="text-2xl font-bold text-indigo-600 dark:text-indigo-400">
            {totalNPCs}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">NPCs Met</div>
        </div>
      </div>

      <!-- Combat -->
      <div
        class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-4 rounded-xl border border-gray-200/50 dark:border-gray-700/50"
      >
        <div class="text-center">
          <div class="text-2xl mb-2">‚öîÔ∏è</div>
          <div class="text-2xl font-bold text-red-600 dark:text-red-400">
            {combatEncounters}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Battles</div>
        </div>
      </div>

      <!-- Play Time -->
      <div
        class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-4 rounded-xl border border-gray-200/50 dark:border-gray-700/50"
      >
        <div class="text-center">
          <div class="text-2xl mb-2">‚è±Ô∏è</div>
          <div class="text-2xl font-bold text-green-600 dark:text-green-400">
            {totalPlayTime.toFixed(1)}h
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Play Time</div>
        </div>
      </div>

      <!-- Level -->
      <div
        class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-4 rounded-xl border border-gray-200/50 dark:border-gray-700/50"
      >
        <div class="text-center">
          <div class="text-2xl mb-2">‚≠ê</div>
          <div class="text-2xl font-bold text-yellow-600 dark:text-yellow-400">
            Lvl {currentLevel}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">
            Party Level
          </div>
        </div>
      </div>
    </div>

    <!-- Detailed Sections -->
    <div class="grid lg:grid-cols-2 gap-8 mb-8">
      <!-- Quest Progress -->
      <div
        class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-6 rounded-xl border border-gray-200/50 dark:border-gray-700/50"
      >
        <h2
          class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center gap-2"
        >
          üìú Quest Progress
        </h2>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-700 dark:text-gray-300">Total Quests</span>
            <span class="font-semibold text-amber-600 dark:text-amber-400"
              >{totalQuests}</span
            >
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-700 dark:text-gray-300">Completed</span>
            <span class="font-semibold text-green-600 dark:text-green-400"
              >{completedQuests}</span
            >
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-700 dark:text-gray-300">Active</span>
            <span class="font-semibold text-blue-600 dark:text-blue-400"
              >{activeQuests}</span
            >
          </div>
          <div
            class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2 mt-4"
          >
            <div
              class="bg-gradient-to-r from-green-500 to-blue-500 h-2 rounded-full transition-all duration-500"
              style={`width: ${(completedQuests / totalQuests) * 100}%`}
            >
            </div>
          </div>
          <div class="text-sm text-gray-500 dark:text-gray-400 text-center">
            {Math.round((completedQuests / totalQuests) * 100)}% Complete
          </div>
        </div>
      </div>

      <!-- Party Composition -->
      <div
        class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-6 rounded-xl border border-gray-200/50 dark:border-gray-700/50"
      >
        <h2
          class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center gap-2"
        >
          ‚öîÔ∏è Party Composition
        </h2>
        <div class="space-y-3">
          <div
            class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg"
          >
            <span class="text-gray-700 dark:text-gray-300">Active Players</span>
            <span class="font-semibold text-purple-600 dark:text-purple-400"
              >{activePlayers}</span
            >
          </div>
          <div
            class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg"
          >
            <span class="text-gray-700 dark:text-gray-300">Average Level</span>
            <span class="font-semibold text-yellow-600 dark:text-yellow-400"
              >{currentLevel}</span
            >
          </div>
          <div
            class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg"
          >
            <span class="text-gray-700 dark:text-gray-300"
              >Total Characters Created</span
            >
            <span class="font-semibold text-indigo-600 dark:text-indigo-400"
              >{totalCharacters}</span
            >
          </div>
        </div>
      </div>
    </div>

    <!-- Combat Statistics -->
    <div
      class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-6 rounded-xl border border-gray-200/50 dark:border-gray-700/50 mb-8"
    >
      <h2
        class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center gap-2"
      >
        ‚öîÔ∏è Combat Statistics
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div
          class="text-center p-4 bg-gradient-to-br from-red-50 to-red-100 dark:from-red-900/20 dark:to-red-800/20 rounded-lg"
        >
          <div class="text-3xl font-bold text-red-600 dark:text-red-400 mb-2">
            {combatEncounters}
          </div>
          <div class="text-sm text-red-700 dark:text-red-300">
            Combat Encounters
          </div>
        </div>
        <div
          class="text-center p-4 bg-gradient-to-br from-orange-50 to-orange-100 dark:from-orange-900/20 dark:to-orange-800/20 rounded-lg"
        >
          <div
            class="text-3xl font-bold text-orange-600 dark:text-orange-400 mb-2"
          >
            {criticalHits}
          </div>
          <div class="text-sm text-orange-700 dark:text-orange-300">
            Critical Hits
          </div>
        </div>
        <div
          class="text-center p-4 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800/20 dark:to-gray-700/20 rounded-lg"
        >
          <div class="text-3xl font-bold text-gray-600 dark:text-gray-400 mb-2">
            {deathSaves}
          </div>
          <div class="text-sm text-gray-700 dark:text-gray-300">
            Death Saves
          </div>
        </div>
      </div>
    </div>

    <!-- Session Timeline -->
    <div
      class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm p-6 rounded-xl border border-gray-200/50 dark:border-gray-700/50"
    >
      <h2
        class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center gap-2"
      >
        üìÖ Session Timeline
      </h2>
      <div class="space-y-3">
        {
          journalEntries
            .sort(
              (a, b) =>
                (a.data.session_number || 0) - (b.data.session_number || 0)
            )
            .map((entry) => (
              <div class="flex items-center gap-4 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                <div class="flex-shrink-0 w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center">
                  <span class="font-semibold text-blue-600 dark:text-blue-400">
                    {entry.data.session_number || 0}
                  </span>
                </div>
                <div class="flex-grow">
                  <h3 class="font-medium text-gray-900 dark:text-gray-100">
                    {entry.data.session_title ||
                      `Session ${entry.data.session_number}`}
                  </h3>
                  <div class="text-sm text-gray-500 dark:text-gray-400 flex items-center gap-4">
                    <span>
                      {entry.data.session_start
                        ? new Date(
                            entry.data.session_start
                          ).toLocaleDateString()
                        : "Date TBD"}
                    </span>
                    {entry.data.characters_involved && (
                      <span>
                        üë• {entry.data.characters_involved.length} players
                      </span>
                    )}
                    {entry.data.npcs_encountered &&
                      entry.data.npcs_encountered.length > 0 && (
                        <span>
                          üé≠ {entry.data.npcs_encountered.length} NPCs
                        </span>
                      )}
                  </div>
                </div>
                <a
                  href={`/journal/${entry.id}`}
                  class="flex-shrink-0 text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 text-sm font-medium"
                >
                  View ‚Üí
                </a>
              </div>
            ))
        }
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="text-center mt-8">
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/journal"
          class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors flex items-center gap-2"
        >
          üìù View Journal
        </a>
        <a
          href="/characters"
          class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-medium transition-colors flex items-center gap-2"
        >
          üë• View Characters
        </a>
        <a
          href="/npcs"
          class="px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition-colors flex items-center gap-2"
        >
          üé≠ View NPCs
        </a>
        <a
          href="/party"
          class="px-6 py-3 bg-amber-600 hover:bg-amber-700 text-white rounded-lg font-medium transition-colors flex items-center gap-2"
        >
          ‚öîÔ∏è Party Portal
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-in {
    animation: fade-in 0.2s ease-out;
  }
</style>
