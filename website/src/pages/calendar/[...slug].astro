---
import { getCollection, type CollectionEntry } from "astro:content";
import TimekeepingLayout from "@/layouts/TimekeepingLayout.astro";

export async function getStaticPaths() {
  const timekeepingEntries = await getCollection("timekeeping");

  return timekeepingEntries.map((entry) => ({
    params: {
      slug: entry.id,
    },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"timekeeping">;
}

const { entry }: Props = Astro.props;
---

<TimekeepingLayout entry={entry} />
